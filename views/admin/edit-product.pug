extends ../layouts/main-layout.pug

block styles 
  link(rel='stylesheet' href='/css/forms.css')

block content 
  form(action='/admin/products' method='POST')
    input#id(type="hidden" name="id" value=`${product.id}`)
    .form-group.row
      label.col-sm-2.col-form-label(for='name') Product Name
      .col-sm-10
        input#name.form-control(type='text' name='name' value=`${product.name}`)
      label.col-sm-2.col-form-label(for='price') Price
      .col-sm-10
        input#price.form-control(type='text' name='price' value=`${product.price}`)
      label.col-sm-2.col-form-label(for='image') Image
      .col-sm-10
        input#image.form-control(type='text' name='imageUrl' value=`${product.imageUrl}`)
      label.col-sm-2.col-form-label(for='categoryid') Category
      .col-sm-10
        select#categoryid.form-control(name='categoryid')
          option(value="-1") Select Category
          each category in categories 
            option(value=`${category.id}` selected=product.categoryid == category.id) #{category.name}
      label.col-sm-2.col-form-label(for='description') Description
      .col-sm-10
        textarea(name='description', cols="10", rows="5")#description.form-control #{product.description}
          
    .form-group.row
      .col-sm-10.offset-sm-2
        input.btn.btn-primary(type='submit' value='Save Product')