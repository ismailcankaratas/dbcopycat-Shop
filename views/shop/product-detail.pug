extends ../layouts/main-layout.pug

block content 
    .row
        .col-lg-3
            img(src=`/img/${product.imageUrl}` alt=`${product.description}`).img-fluid
        .col-lg-9.pl-3
            h1 #{product.name}
            hr
            a(href="").btn.btn-link.p-0.mb-3 Telephone
            div.mb-3
                h4.text-primary.mb-3 Price: #{product.price} TL
                button(type="submit").btn.btn-primary.btn-lg Add To Cart
            .row 
                .col-md-12
                    hr
                    p.p-3 #{product.description}
                        

             

